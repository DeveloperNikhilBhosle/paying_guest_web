        <div class="col-md-6">
          <div class="card card-secondary">
            <div class="card-header">
              <h3 class="card-title">Property Owner Details</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              
              <div class="form-group">
                <label for="inputSpentBudget">Full Name</label>
                <input type="text" id="inputSpentBudget" asp-for="ownerDetails.fullName" class="form-control" value="" step="1">
              </div>
              <div class="form-group">
                <label for="inputEstimatedDuration">Contact Number</label>
                <input type="number" id="inputEstimatedDuration" asp-for="ownerDetails.contactNumber" class="form-control" value="" step="0.1">
              </div>
              <div class="form-group">
                <label for="inputSpentBudget">Permanent Address</label>
                <textarea id="inputSpentBudget" class="form-control" asp-for="ownerDetails.address" name="address" value="" step="1">
                    
                </textarea>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
