                <label for="inputName">Property Name</label>
                <input type="text" id="inputName" asp-for="propertyName" class="form-control" />
              </div>
              <div class="form-group">
                <label for="inputDescription">Description</label>
                <textarea id="inputDescription" class="form-control" name="propertyDescription" asp-for="propertyDescription" rows="4"></textarea>
              </div>
              <div class="form-group">
                <label for="inputStatus">State</label>
                  @Html.DropDownList("state",(IEnumerable<SelectListItem>)ViewBag.State , new { 
                      @class = "form-control", @id = "state", @name = "state" 
                        
                  })

