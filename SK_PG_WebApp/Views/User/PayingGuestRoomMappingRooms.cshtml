@model SK_PG_WebApp.Models.DynamicModels.MapPGToRoomDC

@{
    ViewData["Title"] = "PayingGuestRoomMappingRoom";
    Layout = "~/Views/Shared/_LayoutUI2.cshtml";
}



         <div class="row" style="margin:20px">
          <div class="col-md-3 col-sm-6 col-12">
