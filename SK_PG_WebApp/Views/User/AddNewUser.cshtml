@model IEnumerable<SK_PG_WebApp.Models.DynamicModels.UserProfileDC>
@{
    ViewData["Title"] = "Add User";
    Layout= "_LayoutUI2";
}

<div class="card card-default" style="margin:10px">
          <div class="card-header">
            <h3 class="card-title">Add New @ViewBag.UserRole</h3>
            <h6 style="color:orangered">@ViewBag.Error</h6>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
              </button>
             
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
              <form class="form-horizontal" enctype="multipart/form-data" method="post">
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label>Name</label>
                    <input type="text" required class="form-control" name="name" value="">
                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>Designation</label>
                      <input type="text" readonly class="form-control" name="designation" value="@ViewBag.UserRole">
                </div>
                <!-- /.form-group -->
              </div>
              <!-- /.col -->
            <div class="col-md-4">
                <div class="form-group">
                  <label>Email</label>
                   <input type="email" required class="form-control" name="email" value="">

                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>Contact Number</label>
                 <input type="number" required class="form-control" name="cotactNumber"  value="">

                </div>
                <!-- /.form-group -->
              </div>
               <div class="col-md-4">
                <div class="form-group">
                  <label>Whats App Number</label>
                   <input type="number" required class="form-control" name="whatsApp"  value="">

                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>DOB</label>
                 <input type="date" required class="form-control" name="dob" value="">

                </div>
                <!-- /.form-group -->
              </div>
               <div class="col-md-4">
                <div class="form-group">
                  <label>About</label>
                   <input type="text"  class="form-control" name="about" value="">

                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>Gender</label>
                  @Html.DropDownList("gender",(IEnumerable<SelectListItem>)ViewBag.Gender , new { 
                                             @class = "form-control", @id = "gender", @name = "gender" 
                                               
                                         })  

                </div>
                <!-- /.form-group -->
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Qualification</label>
                   <input type="text"  class="form-control" name="qualification"  value="">

                </div>
                <!-- /.form-group -->
          @*      <div class="form-group">
                  <label>Picture</label>
                            <input type="file" name="postedFiles" class="form-control" multiple />

                </div>*@

                 <div class="form-group">
                <label for="exampleInputFile">Photo</label>
                <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" name="postedFiles" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Choose User Photo</label>
                      </div>
                     
                    </div>
                    </div>

                <!-- /.form-group -->
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Aadhar</label>
                   <input type="number" required class="form-control" name="aadhar"  value="">

                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>PAN</label>
                 <input type="text" required class="form-control" name="pan" value="">

                </div>
                <!-- /.form-group -->
              </div>

              <div class="col-12"><h5>Family Details</h5></div>
              <div class="col-md-4">
                
                <div class="form-group">
                  <label>Family Member (e.g. Nikhil - Brother)</label>
                        <input type="text" required class="form-control" name="familyMember" value="">    
                </div>
                <!-- /.form-group -->
               
                <!-- /.form-group -->
              </div>
              
              <div class="col-md-4">
                
                <div class="form-group">
                  <label>Family Contact</label>
                        <input type="number" required class="form-control" name="familyContact" value="">    
                </div>
                <!-- /.form-group -->
               
                <!-- /.form-group -->
              </div>
              
              <div class="col-md-4">
                  

                
                <!-- /.form-group -->
                <div class="form-group">
                  <label>Refered By</label>
                 @Html.DropDownList("refferedBy",(IEnumerable<SelectListItem>)ViewBag.Users , new { 
                                             @class = "form-control", @id = "refferedBy", @name = "refferedBy" 
                                               
                                         }) 

                </div>
                <!-- /.form-group -->
              </div>
              <div class="col-md-4">
                
                <div class="form-group">
                  <label>Permenant Address</label>
                        <textarea required class="form-control" name="pAddress" value="">   </textarea> 
                </div>
                <!-- /.form-group -->
               
                <!-- /.form-group -->
              </div>
               <div class="col-md-4">
                    
                                <button type="submit" class="btn btn-success float-right"> Submit </button>

                <!-- /.form-group -->
               
                <!-- /.form-group -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->

                </form>
           


              <!-- /.col -->
              
              <!-- /.col -->
            </div>

          <!-- /.card-body -->
          <div class="card-footer">
            Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
            the plugin.
          </div>
        </div>