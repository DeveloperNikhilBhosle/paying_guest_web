@model IEnumerable<SK_PG_WebApp.Models.DynamicModels.PrintInvoiceDC>
@{
    Layout= null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SK Paying Guest | Invoice Print</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body style="margin:20px">
<div class="wrapper">
  <!-- Main content -->
  <section class="invoice">

   @foreach(var item in Model)
   {
               
            
            <!-- title row -->
    <div class="row">
      <div class="col-12">
        <h2 class="page-header">
          @*<i class="fas fa-globe"></i>*@
          <img src="/dist/img/skInvoiceLogo.png">
          SK Paying Guest
          <small class="float-right">Date: @DateTime.Now</small>
        </h2>
      </div>
      <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
      <div class="col-sm-4 invoice-col">
        From
        <address>
          <strong> @item.fromUser </strong><br>
           @*@item.fromAddress <br>*@
          Phone:  @item.fromPhone<br>
          Email: @item.fromEmail
        </address>
      </div>
      <!-- /.col -->
      <div class="col-sm-4 invoice-col">
        To
        <address>
          <strong> @item.toUser</strong><br>
         @*  @item.toAddress<br>*@
          Phone:  @item.toPhone<br>
          Email: @item.toEmail
        </address>
      </div>
      <!-- /.col -->
      <div class="col-sm-4 invoice-col">
        <b>Invoice No   :  @item.invoiceNumber</b><br>
        <br>
        <b>Payment Due:</b> @DateTime.Now.Date <br>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

    <!-- Table row -->
    <div class="row">
      <div class="col-12 table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>No</th>
            <th>Transaction Id</th>
            <th>Payment Source</th>
            <th>Date Range</th>
            <th>Payment Gateway</th>
            <th>Amount</th>
            <th>Discount</th>
          </tr>
          </thead>
          <tbody>
                                @foreach( var items in @item.data)
                                {
                                    <tr>
                                      <td> @items.no </td>
                                      <td> @items.transactionId</td>
                                      <td> @items.paymentType </td>
                                      <td> @items.dateRange</td>
                                      <td> @items.paymentGateway</td>
                                      <td> @items.amount</td>
                                      <td> @items.discount</td>
                                    </tr>
                                }
                                
          
          </tbody>
        </table>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
      <!-- accepted payments column -->
      <div class="col-6">
        <p class="lead">Payment Methods:</p>
        <img src="~/dist/img/credit/visa.png" alt="Visa">
        <img src="~/dist/img/credit/mastercard.png" alt="Mastercard">
        <img src="~/dist/img/credit/american-express.png" alt="American Express">
        <img src="~/dist/img/credit/paypal2.png" alt="Paypal">

        <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
          Thanks for your contribution, Have a great Day !
        </p>
      </div>
      <!-- /.col -->
      <div class="col-6">
        <p class="lead">Amount Due @DateTime.Now.Date</p>

        <div class="table-responsive">
          <table class="table">
            <tr>
              <th style="width:50%">Total Amount :</th>
              <td> @item.totalAmount </td>
            </tr>
            <tr>
              <th> Tax / GST : </th>
              <td> @item.tax </td>
            </tr>
            <tr>
              <th> Discount </th>
              <td> @item.totalDiscount </td>
            </tr>
            <tr>
              <th>Total Payable Amount :</th>
              <td> @item.totalPayable </td>
            </tr>
          </table>
        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
    }
  </section>
  <!-- /.content -->
</div>
<!-- ./wrapper -->
<!-- Page specific script -->
<script>
  window.addEventListener("load", window.print());
</script>
</body>
</html>
