@model IEnumerable<SK_PG_WebApp.Models.DynamicModels.UserInvoiceDC>

@{
    ViewData["Title"] = "Invoice List";
    Layout = "~/Views/Shared/_LayoutUI2.cshtml";
}

<div class="card" style="margin:20px">

   <form style="width:100%" method="post">

              <div class="card-header">
                  <div class="row">
                      <div class="col-md-2">
                             <h3 class="card-title">Invoice List</h3>
                      </div>
                      <div class="col-md-7">

                      </div>
                      <div class="col-md-3">
                             <button type="submit" class="btn-small btn-success" style="border-radius:10px">
                    <i class="fas fa-file-invoice"></i>  Generate Invoice
                </button>
                      </div>
                  </div>
             

             

                
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0" style="height: 500px;">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                        <th></th>
                      <th>Pyment ID</th>
                      <th>Payment Date</th>
                      <th>Payment Range</th>
                      <th>Description</th>
                      <th>Amount</th>
                       <th>Discount</th>
                    </tr>
                  </thead>
                  <tbody>

                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="isChecked" />
                        </td>
                      <td>
                          <input name=" paymentId" type="text" value=" @item.paymentId" readonly />
                          </td>
                      <td> @item.paymentDate</td>
                      <td>@item.paymentDateRange </td>
                      <td>@item.paymentDescription</td>
                      <td>@item.amount</td>
                      <td>@item.discount</td>
                    </tr>
                }
                
                  
                    
                 
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->

    </form>
            </div>